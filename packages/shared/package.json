{
  "name": "@grumpycorp/warm-and-fuzzy-shared",
  "version": "1.0.0",
  "private": true,
  "description": "WarmAndFuzzy shared types",
  "repository": {
    "type": "git",
    "url": "https://github.com/rgiese/warm-and-fuzzy.git"
  },
  "license": "CC-BY-NC-SA-4.0",
  "author": "robin@grumpycorp.com",
  "files": [
    "build"
  ],
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "prebuild": "npm-run-all codegen:*",
    "build": "tsc",
    "codegen:flatbuffers": "run-script-os",
    "codegen:flatbuffers:win32": "cross-var copy $GRUMPYCORP_ROOT\\flatbuffers\\js\\flatbuffers.js .\\src\\generated\\flatbuffers.js && cross-var $GRUMPYCORP_ROOT\\flatbuffers\\flatc.exe --ts -o src\\generated\\ src\\schema\\firmware.fbs",
    "codegen:flatbuffers:default": "cross-var cp $GRUMPYCORP_ROOT/flatbuffers/js/flatbuffers.js ./src/generated/flatbuffers.js && cross-var $GRUMPYCORP_ROOT/flatbuffers/flatc --ts -o ./src/generated/ ./src/schema/firmware.fbs",
    "codegen:graphql": "graphql-codegen --config graphql-codegen.yml",
    "format:fix": "prettier --write {.,./src/**,./public/**}/*.{css,graphql,html,js,jsx,json,md,scss,ts,tsx,webmanifest}",
    "lint": "eslint \"./src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint --fix \"./src/**/*.{ts,tsx}\""
  },
  "dependencies": {
    "graphql": "^14.5.8",
    "yup": "^0.27.0"
  }
}
