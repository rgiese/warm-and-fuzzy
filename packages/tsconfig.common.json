{
  "compilerOptions": {
    "strict": true,
    "target": "es6",
    "lib": ["es6"],

    "outDir": "./build",
    "sourceMap": true,

    "moduleResolution": "node",

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "skipLibCheck": true,

    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true
  }
}
