{
  "name": "@grumpycorp/warm-and-fuzzy-firmware",
  "version": "1.0.0",
  "private": true,
  "description": "WarmAndFuzzy firmware",
  "repository": {
    "type": "git",
    "url": "https://github.com/rgiese/warm-and-fuzzy.git"
  },
  "license": "CC-BY-NC-SA-4.0",
  "author": "robin@grumpycorp.com",
  "files": [
    "./firmware-build-tool",
    "./thermostat"
  ],
  "scripts": {
    "prebuild": "npm-run-all \"codegen:*\"",
    "build": "ts-node firmware-build-tool/build.ts thermostat",
    "codegen:flatbuffers": "ts-node firmware-build-tool/codegen.ts thermostat",
    "deploy-firmware:prod": "ts-node firmware-build-tool/upload.ts thermostat Main.cpp",
    "test": "ts-node firmware-build-tool/test.ts thermostat",
    "firmware:flash": "ts-node firmware-build-tool/flash.ts thermostat",
    "firmware:monitor": "ts-node firmware-build-tool/monitor.ts",
    "format:check": "prettier --check . --ignore-path ../../.prettierignore & clang-format \"--glob=**/*.{cpp,h}\"",
    "format:fix": "prettier --write . --ignore-path ../../.prettierignore & clang-format \"--glob=**/*.{cpp,h}\" -i",
    "lint": ""
  },
  "devDependencies": {
    "clang-format": "^1.8.0",
    "glob": "^10.3.10",
    "particle-cli": "^3.17.3",
    "path": "^0.12.7"
  }
}
