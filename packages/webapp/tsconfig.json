{
  "extends": "../tsconfig.common.json",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],

    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,

    "allowJs": true,
    "jsx": "preserve",

    "allowSyntheticDefaultImports": true,

    "noEmit": true
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
