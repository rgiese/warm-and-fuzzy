{
  "extends": "../tsconfig.common.json",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],

    "module": "esnext",
    "isolatedModules": true,
    "esModuleInterop": true,

    "allowJs": true,
    "allowSyntheticDefaultImports": true,
        
    "jsx": "preserve",

    "noEmit": true
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
