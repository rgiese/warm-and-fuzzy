{
  "name": "warmandfuzzy-firmware",
  "version": "1.0.0",
  "description": "WarmAndFuzzy Particle Firmware",
  "main": "index.js",
  "author": "",
  "license": "ISC",
  "scripts": {
    "build": "node firmware-build-tool/run.js build -p thermostat",
    "flash": "node firmware-build-tool/run.js flash -p thermostat",
    "format:check": "cross-var prettier --check $npm_package_config_prettierglob & clang-format --glob=**/*.{cpp,h}",
    "format:fix": "cross-var prettier --write $npm_package_config_prettierglob & clang-format --glob=**/*.{cpp,h} -i",
    "monitor": "node firmware-build-tool/run.js monitor"
  },
  "config": {
    "prettierglob": "{.,./**}/*.{js,json}"
  },
  "devDependencies": {
    "clang-format": "^1.2.4",
    "cross-var": "^1.1.0",
    "oclif": "^1.13.1",
    "path": "^0.12.7",
    "prettier": "^1.16.4"
  },
  "files": [
    "./firmware-build-tool",
    "./thermostat"
  ],
  "oclif": {
    "commands": "./firmware-build-tool/commands"
  }
}
